<odoo>

    <record id = "employee_view_tree" model ="ir.ui.view">
        <field name = "name">employee_tree</field>
        <field name = "model">employee</field>
        <field name = "arch" type="xml">
            <tree multi_edit="1" create="1" edit="1" delete="1">
                <field name = "employee_name"/>
                <field name = "employee_phone_number"/>
                <field name = "employee_address"/>
                <field name = "employee_birthdate"/>
                <field name = "employee_gender" optional="1"/>
                <field name = "employee_department" optional = "1"/>
                <field name = "contract_end_date" optional="1"/>
                <field name = "work_status" optional="1"/>
            </tree>
        </field>
    </record>

    <record id="employee_view_from" model ="ir.ui.view">
        <field name = "name">Employee form</field>
        <field name = "model">employee</field>
        <field name = "arch" type="xml">
        <form>
               <sheet>
                   <div class="oe_title">
                       <label for="employee_name"/>
                       <h1>
                           <field name="employee_name"/>
                       </h1>
                   </div>
                   <group>
                       <group string = "Contact Info.">
                           <field name = "employee_phone_number" required = "1"/>
                           <field name = "employee_address"/>
                           <field name = "employee_birthdate"/>
                       </group>
                       <group string = "General Information">
                           <field name = "employee_gender" />
                           <field name = "employee_department" />
                           <field name = "contract_start_date" />
                           <field name = "contract_end_date" />
                           <field name = "work_status" />
                       </group>
                   </group>

               </sheet>
            </form>
        </field>
    </record>
    <record id="employee_action" model = "ir.actions.act_window">
        <field name = "name">Add new employee</field>
        <field name = "res_model">employee</field>
    </record>

    <menuitem
            id = "employee_menu_item"
            name = "Employee"
            parent = "employee_menu"
            action = "employee_action"
    />
</odoo>